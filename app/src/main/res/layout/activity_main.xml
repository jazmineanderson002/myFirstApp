<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#FFDD4A"
        android:orientation="vertical">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="UCLA"
                    android:layout_width="206dp"
                    android:layout_height="61dp" android:id="@+id/textView2" android:textColor="#0E258F"
                    app:fontFamily="@font/damion" android:textSize="45sp"
                    android:layout_gravity="center"
                    android:gravity="center" android:background="@drawable/ucla" android:layout_marginBottom="35dp"/>
            <TextView
                    android:text="Mascot: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView3"
                    android:layout_gravity="center"
                    android:gravity="center" android:textColor="#3F51B5" android:visibility="visible"/>
            <ImageView
                    android:layout_width="248dp"
                    android:layout_height="162dp" app:srcCompat="@drawable/uclabruin" android:id="@+id/imageView"
                    android:layout_gravity="center" android:layout_marginBottom="25dp"/>
            <Button
                    android:text="softball"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content" android:id="@+id/toastButton" android:background="#FFFFFF"
                    android:textColor="#3F51B5" android:layout_marginBottom="15dp" android:layout_gravity="center"
                    android:onClick="onClick"
            />
            <TextView
                    android:text="2019 National Champs:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView" android:textColor="#3F51B5"
                    android:layout_gravity="center"
                    android:gravity="center" />
            <ImageView
                    android:layout_width="368dp"
                    android:layout_height="143dp" app:srcCompat="@drawable/uclasb" android:id="@+id/imageView2"
                    android:layout_gravity="center" android:layout_marginBottom="15dp"

            />
            <Button
                    android:text="@string/computer_science"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content" android:id="@+id/logCatButton" android:background="#FFFFFF"
                    android:textColor="#3F51B5" android:layout_marginBottom="15dp" android:layout_gravity="center"
                    android:onClick="onClick"
            />
            <TextView
                    android:text="Henry Samueli School of Engineering and Applied Science:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView4" android:textColor="#3F51B5"
                    android:layout_gravity="center"
                    android:gravity="center" android:visibility="visible"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/uclacs" android:id="@+id/imageView3"
                    android:gravity="center" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>